<p style="color: green"><%= notice %></p>


<div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= render @question %></h4>
    <p class="card-text">
      Some quick example text to build on the card title
      and make up the bulk of the card's content.
    </p>
    <div>
      <%= link_to "Edit this question", edit_question_path(@question), :class=> 'btn btn-info btn-sm'%>
      <br>
      <%= link_to "Back to questions", questions_path,  :class=> 'btn btn-info btn-sm' %>
      <br>
      <%= link_to "Destroy this question", @question, method: :delete, :class=> 'btn btn-danger btn-sm' %>
    </div>
  </div>
</div>



